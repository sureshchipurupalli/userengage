.page-content
  = render 'shared/page_heading', page_title: t('.page_title'), page_description: t('.page_description')
  .row.mdl-block-gap
  .row
    .col-md-3
    .col-md-6
      .mdl-card.mdl-shadow--2dp.through.mdl-shadow--2dp{style: 'width: 100%;'}
        .mdl-card__title
          .mdl-card__title-text
            = t('.update_user')
        .mdl-card__actions.mdl-card--border
        .mdl-card__supporting-text{style: 'width: 100%;'}
          %div{id: "update_user_errors"}
          .form-horizontal
            = form_for(resource, as: resource_name, url: registration_path(resource_name),
                      html: { method: :put}) do |f|
              = devise_error_messages!
              .col-md-9
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.email_field :email, autofocus: true, readonly: "true", class: "mdl-textfield__input"
                  %label.mdl-textfield__label{for: :name}
                    = t('email')
              .col-md-9
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.text_field :first_name, autofocus: true, class: "mdl-textfield__input"
                  %label.mdl-textfield__label{for: :name}
                    = t('first_name')
              .col-md-9
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.text_field :last_name, autofocus: true, class: "mdl-textfield__input"
                  %label.mdl-textfield__label{for: :name}
                    = t('last_name')
              .col-md-9
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.file_field :profile_pic, autofocus: true,  class: "mdl-textfield__input"
                  %label.mdl-textfield__label{for: :name}
                    = t('update_profile_pic')
              .col-md-9
                = f.submit "Update", class: "button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
    .col-md-3