- items = items
- itemscount = items.size if items.present?
.background-cream
  - if items.present? && itemscount > 0
    %ol.progtrckr{"data-progtrckr-steps"=>itemscount, style:"width:100%"}
      - items.each do |item|
        - if item[2] == '0'
          %li.progtrckr-todo
            = item[1]
        - else
          %li.progtrckr-done
            %a{id: item[0],name: item[0],href: item[3].to_s}
              = item[1]

    %div{style: "height:20px"}
  - else
    = 'nothing to load'

:css
  ol.progtrckr {
    display: table;
    list-style-type: none;
    margin: 0;
    padding: 0;
    table-layout: fixed;
    width: 100%;
  }

  ol.progtrckr li {
    display: table-cell;
    text-align: center;
    line-height: 3em;
  }

  ol.progtrckr[data-progtrckr-steps="2"] li { width: 49%; }
  ol.progtrckr[data-progtrckr-steps="3"] li { width: 33%; }
  ol.progtrckr[data-progtrckr-steps="4"] li { width: 24%; }
  ol.progtrckr[data-progtrckr-steps="5"] li { width: 19%; }
  ol.progtrckr[data-progtrckr-steps="6"] li { width: 16%; }
  ol.progtrckr[data-progtrckr-steps="7"] li { width: 14%; }
  ol.progtrckr[data-progtrckr-steps="8"] li { width: 12%; }
  ol.progtrckr[data-progtrckr-steps="9"] li { width: 11%; }

  ol.progtrckr li.progtrckr-done {
    color: black;
    border-bottom: 8px solid yellowgreen;
  }
  ol.progtrckr li.progtrckr-todo {
    color: silver;
    border-bottom: 8px solid silver;
  }

  ol.progtrckr li:after {
    content: "\00a0\00a0";
  }
  ol.progtrckr li:before {
    position: relative;
    bottom: -2.5em;
    float: left;
    left: 50%;
    line-height: 1em;
    content: "\00a0\00a0";
  }
  ol.progtrckr li.progtrckr-done:before {
    content: "\2713";
    color: white;
    background-color: yellowgreen;
    height: 1.2em;
    width: 1.2em;
    line-height: 1.2em;
    border: none;
    border-radius: 1.2em;
  }
  ol.progtrckr li.progtrckr-todo:before {
    content: "\2713";
    color: silver;
    background-color: white;
    font-size: 1.5em;
    bottom: -1.6em;
  }